        <server name="MAIL_USERNAME" value="a28b31bafc39b3"/>
        <server name="MAIL_PASSWORD" value="30ac3439ccd7a4"/>
        <server name="MAIL_ENCRYPTION" value="tls"/>
        <server name="MAIL_FROM_ADDRESS" value="test-system@catch.com"/>
        <server name="QUEUE_CONNECTION" value="sync"/>
        <server name="SESSION_DRIVER" value="array"/>
        <server name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
